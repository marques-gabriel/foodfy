{% extends "admin/chefs/layout.njk" %}

{% block title %}
    <title> Detalhes do chef </title>
{% endblock title %}

{% block content %}


<div class="detail-container">

    <h3> Chef: {{chef.name}}</h3>
    <a href="/admin/chefs/{{chef.id}}/edit" class="buttons" id="button-edit">Editar Chef</a>

    <div class="banner-detail">
        <div class="banner-image-chef">
            <img src="{{fileChef.src}}" alt="{{chef.name}}">
        </div>

        <div class="banner-info">
            <h1>{{chef.name}}</h1>
            <h2>{{chef.total_recipes}} receitas</h2>
        </div>
    </div>


    <section class="menu menu-admin">

        <h3> Receitas</h3>
        <div class="menu-container-admin">

            {% for recipe in recipes %}    
            <div class="recipe-container-admin" id="">
                <div class="recipe-img-admin">
                    <img src="{{recipe.img}}" alt="{{recipe.title}}">
                </div>
                <div class="recipe-info" id="">
                    <h3 class="recipe-title">{{recipe.title}}</h3>
                    <p class="recipe-author">por {{recipe.chef_name}}</p>
                    <a class="button-visualizar" href="/admin/recipes/{{recipe.id}}"> Visualizar </a>
                </div>
            </div>       
            {% endfor %}
            
        </div>

    </section>

</div>


{% endblock content %}


