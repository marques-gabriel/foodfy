{% extends "site/layout.njk" %}

{% block title %}
    <title> Receitas </title>
{% endblock title %}

{% block idRecipes %}
        <div id="header-recipes">Receitas</div>
{% endblock idRecipes %}

{% block header %}
    <div class="header">
        <form action="/search" method="GET">

            <input 
                type="text"
                name="filter"
                placeholder="Buscar uma receita "
                value="{{filter}}"
            >
            <button type="submit">Buscar</button>

        </form>
    </div>

{% endblock header %}


{% block content %}

    <section class="menu" id="menu-recipes">

        <div class="menu-container">
        {% for item in items %}
        
            <div class="recipe-container" id="">
                <div class="recipe-img">
                    <a href="/recipe/{{item.id}}"><img src="{{item.image}}" alt=""></a>
                </div>
                <div class="recipe-info" id="">
                    <h3 class="recipe-title">{{item.title}}</h3>
                    <p class="recipe-author">por {{item.chef_name}}</p>
                </div>
            </div>

        {% endfor %} 
        

        </div>
        

    </section>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    ></div>

    <script src="/pagination.js"></script>


{% endblock content %}
