{% extends "admin/session/layout.njk" %}

{% import "admin/parts/card.njk" as card %}

{% block title %}
    <title>Resetar Senha</title>
{% endblock title %}

{% block content %}

{% call card.render('Nova Senha', 'password') %}

<form method="POST" action="/admin/users/password-reset">

    <div class="fields">

        <div class="item_title">Email</div>
        <div class="item">
            <div class="input">
                <input
                    type="email"
                    name="email"
                    placeholder="Digite seu email"
                    value="{{user.email}}"
                    onblur="Validate.apply(this, 'isEmail')"
                >
            </div>
        </div>

        <div class="item_title">Nova senha</div>
        <div class="item">
            <div class="input">
                <input
                    type="password"
                    name="password"
                    placeholder="Digite sua nova senha"
                >
            </div>
        </div>

        <div class="item_title">Repetir senha</div>
        <div class="item">
            <div class="input">
                <input
                    type="password"
                    name="passwordRepeat"
                    placeholder="Repita a nova senha"
                >
            </div>
        </div>

        <input type="hidden" name="token" value="{{token}}">
    </div>

    <button class="button" type="submit" onclick="Validate.allFields(event)"> Nova senha</button>

</form>

{% endcall %}

{% endblock content %}