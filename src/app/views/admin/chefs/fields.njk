
<div class="item_title">Nome</div>
<div class="item">
  <div>
    <input type="text" name="name" value="{{chef.name}}">
  </div>
</div>

<div class="item_title">Avatar</div>
<div class="avatar-file">
  <div id="avatar">
      <input
        id="avatar-input" 
        type="file"
        name="avatar"
        accept="image/*"
        onchange="PhotosUpload.handleFileInput(event)"
      >
      <p>Enviar Avatar</p>
  </div>

  <div id="avatar-preview">
      {% if chef.img %}
        <div class="photo" id={{chef.img.id}}>
          <img src="{{chef.img}}" alt="{{chef.name}}">
          <i class="material-icons"
                onclick="PhotosUpload.removeOldPhoto(event)"
            >delete</i>
        </div>
        <input type="hidden" name="removed_files">
      {% endif %}
  </div>
</div>




