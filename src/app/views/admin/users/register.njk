{% extends "admin/users/layout.njk" %}

{% block title %}
    <title>Registrar Usuário</title>
{% endblock title %}

{% block content %}

<section class="user-register container form">
    <form method="POST" action="/admin/users/register">


        <div class="header-user">
            <h3>Criar Usuário</h3>
            <button class="button" type="submit">Salvar</button>
            <a class="button" href="/admin/users/">Cancelar</a>
        </div>

        <div class="fields-users">
            {% include 'admin/users/fields.njk' %}
        </div>

    </form>
</section>



{% endblock content %}