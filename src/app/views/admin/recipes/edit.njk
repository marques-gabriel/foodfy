{% extends "admin/layout.njk" %}

{% block title %}
    <title> Editando receita </title>
{% endblock title %}

{% block content %}

<div class="card">
    <form class="card" method="POST" action="/admin/recipes?_method=PUT">

        <h3> Editando receita </h3>
        <button class="buttons" id="save-edit" type="submit">Salvar Receita</button>

        {% include 'admin/recipes/fields.njk' %}
        
        <input 
            type="hidden" 
            name="id" 
            value="{{recipe.id}}"
        >
    </form>

    <form class="form-delete" action="/admin/recipes?_method=DELETE" method="post">
        <input 
            type="hidden" 
            name="id" 
            value="{{recipe.id}}"
        >
        <button class="buttons" type="submit">Deletar</button>
    </form>

    {% include "../../delete-recipe.njk"%}

</div>

    

    

{% endblock content %}