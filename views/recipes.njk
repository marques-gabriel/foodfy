{% extends "layout.njk" %}

{% block title %}
    <title> Receitas </title>
{% endblock title %}

{% block idReceitas %}
        <div id="receitas">Receitas</div>
{% endblock idReceitas %}

{% block content %}

    <section class="menu" id="menu-receitas">

        <div class="products-container">
        {% for item in items %}
        
            <div class="option-container" id="">
                <div class="option-img">
                    <img src="{{item.image}}" alt="">
                </div>
                <div class="option-info" id="">
                    <h3 class="option-title">{{item.title}}</h3>
                    <p class="option-autor">{{item.author}}</p>
                </div>
            </div>

        {% endfor %}
        

        </div>

    </section>

{% endblock content %}
