{% extends "admin/chefs/layout.njk" %}

{% block title %}
    <title> Chefs </title>
{% endblock title %}

{% block content %}

    <section class="menu menu-admin">

        <div class="header-chefs">

            {% if user.is_admin == true %}
            <h3>Gerenciar chefs</h3>
            {% endif %}

            {% if user.is_admin == false %}
            <h3>Chefs</h3>
            {% endif %}

            

            {% if user.is_admin == true %}
                <a class="button chef-add" href="/admin/chefs/create">Novo chefe</a>
            {% endif %}

        </div>
        
        <div class="menu-container-admin-chef">

            {% for chef in chefs %}
            <div class="chef-container-admin" id="">
                <div class="chef-img-admin">
                    <img src="{{chef.img}}" alt="{{chef.name}}">
                </div>
                <div class="chef-info" id="">
                    <h3 class="chef-name">{{chef.name}}</h3>
                    <a class="button-visualizar-chefs" href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>    
            {% endfor %}
    
        </div>

    </section>
        
        
{% endblock content %}
