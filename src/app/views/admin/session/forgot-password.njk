{% extends "admin/session/layout.njk" %}

{% import "admin/parts/card.njk" as card %}

{% block title %}
    <title>Esqueceu a senha?</title>
{% endblock title %}

{% block content %}

{% call card.render('Esqueceu a senha?', 'password') %}

<form method="POST" action="/admin/users/forgot-password">

    <div class="fields">
        <div class="item_title">Email</div>
        <div class="item">
            <div class="input">
                <input
                    type="email"
                    name="email"
                    placeholder="Digite seu email para recuperar sua senha"
                    value="{{user.email}}"
                    onblur="Validate.apply(this, 'isEmail')"
                >
            </div>
        </div>
    </div>

    <button class="button" type="submit" onclick="Validate.allFields(event)">Recuperar</button>

</form>

{% endcall %}

{% endblock content %}