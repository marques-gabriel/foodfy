{% extends "layout.njk" %}

{% block title %}
    <title> Home </title>
{% endblock title %}

{% block content %}

    <section class="banner">
        <div class="banner-content">

            <h1>{{home.title}}</h1>
            <img src="{{home.img}}" alt="" id="chef">
            <p>{{home.text}}}</p>
        </div>

    </section>


    <section class="menu">
        <h2 id="mais-acessadas">{{home.subTitle}}</h2>

        <div class="products-container">

            {% for item in items %}
            
                <div class="option-container" id="">
                    <div class="option-img">
                        <img src="{{item.image}}" alt="">
                    </div>
                    <div class="option-info">
                        <h3 class="option-title">{{item.title}}</h3>
                        <p class="option-autor">{{item.author}}</p>
                    </div>
                </div>

            {% endfor %}

        </div>

    </section>

{% endblock content %}