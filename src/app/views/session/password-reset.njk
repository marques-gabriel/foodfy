{% extends "session/layout.njk" %}

{% block title %}
    <title>Resetar Senha</title>
{% endblock title %}

{% block content %}

<section class="password container form">
    <form method="POST" action="/admin/users/password-reset">

        <div class="header-session">
            <div class="logo"> <a href="/"><img src="/images/logo.png" alt="logo"></a></div>
            <h3>Nova Senha</h3>
        </div>

        <div class="fields">

            <div class="item_title">Email</div>
            <div class="item">
                <div class="input">
                    <input
                        type="email"
                        name="email"
                        placeholder="Digite seu email"
                        value="{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>

            <div class="item_title">Nova senha</div>
            <div class="item">
                <div class="input">
                    <input
                        type="password"
                        name="password"
                        placeholder="Digite sua nova senha"
                    >
                </div>
            </div>

            <div class="item_title">Repetir senha</div>
            <div class="item">
                <div class="input">
                    <input
                        type="password"
                        name="passwordRepeat"
                        placeholder="Repita a nova senha"
                    >
                </div>
            </div>

            <input type="hidden" name="token" value="{{token}}">
        </div>

        <button class="button" type="submit"> Nova senha</button>

    </form>
</section>


{% endblock content %}