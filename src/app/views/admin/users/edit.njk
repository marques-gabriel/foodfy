{% extends "admin/users/layout.njk" %}

{% block title %}
    <title>Atualizar Usuário</title>
{% endblock title %}

{% block content %}

<section class="user-register container form">
    <form method="POST" action="/admin/users?_method=PUT">


        <div class="header-user">
            <h3>Atualizar Usuário</h3>
            <button class="button delete" form="form-delete" type="submit">Deletar</button>
            <button class="button" type="submit" onclick="Validate.allFields(event)">Salvar</button>
        </div>

        <div class="fields-users">
            {% include 'admin/users/fields.njk' %}

            <input 
                type="hidden" 
                name="id" 
                value="{{user.id}}"
            >

        </div>
    </form>

    <form id="form-delete" action="/admin/users?_method=DELETE" method="post">
        <input type="hidden" name="id" value="{{user.id}}">
    </form>

    {% include "./delete-user.njk"%}


</section>


{% endblock content %}