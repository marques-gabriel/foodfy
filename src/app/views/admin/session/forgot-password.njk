{% extends "admin/session/layout.njk" %}

{% block title %}
    <title>Esqueceu a senha?</title>
{% endblock title %}

{% block content %}

<section class="password container form">
    <form method="POST" action="/admin/users/forgot-password">

        <div class="header-session">
            <div class="logo"> <a href="/"><img src="/images/logo.png" alt="logo"></a></div>
            <h3>Esqueceu a senha?</h3>
        </div>

        <div class="fields">
            <div class="item_title">Email</div>
            <div class="item">
                <div class="input">
                    <input
                        type="email"
                        name="email"
                        placeholder="Digite seu email para recuperar sua senha"
                        value="{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')"
                    >
                </div>
            </div>
        </div>

        <button class="button" type="submit" onclick="Validate.allFields(event)">Recuperar</button>

    </form>
</section>



{% endblock content %}