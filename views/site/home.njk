{% extends "site/layout.njk" %}

{% block title %}
    <title> Home </title>
{% endblock title %}

{% block content %}

    <section class="banner"> 
        <div class="banner-content">

            <h1>{{home.title}}</h1>
            <img src="{{home.img}}" alt="Chef" id="chef">
            <p>{{home.text}}}</p>

        </div>

    </section>


    <section class="menu">
        <h2>{{home.subTitle}}</h2>

        <div class="menu-container">

            {% for item in items %}
            
                <div class="recipe-container" id="">
                    <div class="recipe-img">
                        <img src="{{item.image}}" alt="">
                    </div>
                    <div class="recipe-info">
                        <h3 class="recipe-title">{{item.title}}</h3>
                        <p class="recipe-autor">{{item.author}}</p>
                    </div>
                </div>

            {% endfor %}

        </div>

    </section>

{% endblock content %}