{% extends "layout.njk" %}

{% block title %}
    <title> Receitas </title>
{% endblock title %}

{% block idRecipes %}
        <div id="header-recipes">Receitas</div>
{% endblock idRecipes %}

{% block content %}

    <section class="menu" id="menu-recipes">

        <div class="menu-container">
        {% for item in items %}
        
            <div class="recipe-container" id="">
                <div class="recipe-img">
                    <img src="{{item.image}}" alt="">
                </div>
                <div class="recipe-info" id="">
                    <h3 class="recipe-title">{{item.title}}</h3>
                    <p class="recipe-author">{{item.author}}</p>
                </div>
            </div>

        {% endfor %} 
        

        </div>

    </section>

{% endblock content %}
