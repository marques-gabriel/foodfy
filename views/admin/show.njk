{% extends "admin/layout.njk" %}

{% block title %}
    <title> Detalhes da Receita </title>
{% endblock title %}

{% block content %}


<div class="detail-container">

    <h3> Receita: {{recipe.title}} </h3>
    <a href="/admin/recipes/{{recipeIndex}}/edit" class="buttons" id="button-edit">Editar receita</a>

    <div class="banner-detail">
        <div class="banner-image">
            <img src="{{recipe.image}}" alt="">
        </div>

        <div class="banner-info">
            <h1>{{recipe.title}}</h1>
            <h2>{{recipe.author}}</h2>
        </div>
    </div>

    <div class="ingredients">
        <div class="title">
            <h3>{{titles.ingredients}}</h3>        
        </div>
        <ul class="ingredients-list">    
            {% for item in recipe.ingredients %}
                <li>{{item}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="preparations">
        <div class="title">
            <h3>{{titles.preparation}}</h3>        
        </div>
        <ul class="preparation-list">    
            {% for item in recipe.preparation %}
                <li>{{item}}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="info">
        <div class="title">
            <h3>{{titles.information}}</h3>
        </div>
        <p class="information">{{recipe.information}}</p>
    </div>

</div>


{% endblock content %}